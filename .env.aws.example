# AWS/DEV environment template for fabio SaaS
# Copy to .env on AWS host and replace placeholders.

APP_ENV=dev
HOST=127.0.0.1
PORT=4001
SERVE_UNIFIED_UI=1

# Persistence
ORCHESTRATION_STORE_BACKEND=postgres
ORCHESTRATION_PG_DSN=postgres://CHANGE_ME_USER:CHANGE_ME_PASS@CHANGE_ME_HOST:5432/CHANGE_ME_DB
ORCHESTRATION_PG_SCHEMA=public

# AI provider
OPENAI_API_KEY=CHANGE_ME_OPENAI_KEY
OPENAI_BASE_URL=https://api.openai.com/v1

# WhatsApp Evolution provider
EVOLUTION_HTTP_BASE_URL=http://CHANGE_ME_EVOLUTION_HOST:8080
EVOLUTION_API_KEY=CHANGE_ME_EVOLUTION_KEY
EVOLUTION_INSTANCE_ID=fabio

# CORS
CORS_ALLOW_ORIGINS=https://dev.automaniaai.com,https://www.automaniaai.com.br,https://automaniaai.com.br
CORS_ALLOW_METHODS=GET,POST,PATCH,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=content-type,authorization,x-requested-with
CORS_MAX_AGE=86400

# Optional owner runtime controls
OWNER_CONFIRMATION_MAX_PENDING_PER_TENANT=20
OWNER_CONFIRMATION_TTL_SECONDS=900
