{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://automaniaai.com.br/fabio/schemas/persona/tenant-policy.schema.json",
  "title": "Tenant Policy Set",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },
    "policy_set_name": { "type": "string", "minLength": 3 },
    "scope": { "type": "string", "enum": ["tenant-global", "owner-concierge", "whatsapp-crm"] },
    "enforcement_mode": { "type": "string", "enum": ["advisory", "blocking"] },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "key": { "type": "string", "minLength": 3 },
          "value": {},
          "priority": { "type": "integer", "minimum": 1, "maximum": 100 },
          "enabled": { "type": "boolean" }
        },
        "required": ["key", "value", "priority", "enabled"]
      }
    }
  },
  "required": ["schema_version", "policy_set_name", "scope", "enforcement_mode", "rules"]
}
