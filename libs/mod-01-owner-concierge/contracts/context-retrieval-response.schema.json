{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://automaniaai.com.br/fabio/schemas/mod-01/context-retrieval-response.schema.json",
  "title": "Module 01 Context Retrieval Response Contract",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "request_id": { "type": "string", "format": "uuid" },
    "tenant_id": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "enum": ["ok"] },
    "retrieval": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "strategy": { "type": "string", "enum": ["lexical-salience-v1"] },
        "vector_ready": { "type": "boolean" },
        "top_k": { "type": "integer", "minimum": 1, "maximum": 20 },
        "retrieved_count": { "type": "integer", "minimum": 0 },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "memory_id": { "type": "string", "format": "uuid" },
              "session_id": { "type": "string", "format": "uuid" },
              "source": { "type": "string", "enum": ["user_message", "assistant_message", "system_note"] },
              "status": { "type": "string", "enum": ["candidate", "promoted", "archived"] },
              "content": { "type": "string", "minLength": 1 },
              "salience_score": { "type": "number", "minimum": 0, "maximum": 1 },
              "score": { "type": "number", "minimum": 0, "maximum": 1 },
              "matched_terms": { "type": "array", "items": { "type": "string", "minLength": 1 } },
              "matched_tags": { "type": "array", "items": { "type": "string", "minLength": 1 } },
              "embedding_ref": { "type": ["string", "null"] }
            },
            "required": [
              "memory_id",
              "session_id",
              "source",
              "status",
              "content",
              "salience_score",
              "score",
              "matched_terms",
              "matched_tags",
              "embedding_ref"
            ]
          }
        }
      },
      "required": ["strategy", "vector_ready", "top_k", "retrieved_count", "items"]
    }
  },
  "required": ["request_id", "tenant_id", "status", "retrieval"]
}
