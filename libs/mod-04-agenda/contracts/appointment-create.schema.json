{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://automaniaai.com.br/fabio/schemas/mod-04/appointment-create.schema.json",
  "title": "Module 04 Appointment Create Contract",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "request": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "request_id": { "type": "string", "format": "uuid" },
        "tenant_id": { "type": "string", "minLength": 1 },
        "source_module": { "type": "string", "enum": ["mod-01-owner-concierge"] },
        "correlation_id": { "type": "string", "format": "uuid" },
        "appointment": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "appointment_id": { "type": "string", "format": "uuid" },
            "external_key": { "type": "string", "minLength": 3 },
            "title": { "type": "string", "minLength": 1 },
            "description": { "type": "string" },
            "start_at": { "type": "string", "format": "date-time" },
            "end_at": { "type": "string", "format": "date-time" },
            "timezone": { "type": "string", "minLength": 3 },
            "status": {
              "type": "string",
              "enum": ["scheduled", "confirmed", "canceled", "completed"]
            },
            "metadata": { "type": "object" }
          },
          "required": ["title", "start_at", "timezone"]
        }
      },
      "required": ["request_id", "tenant_id", "source_module", "appointment"]
    }
  },
  "required": ["request"]
}
