{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://automaniaai.com.br/fabio/schemas/mod-04/reminder-events.schema.json",
  "title": "Module 04 Reminder Lifecycle Events",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "enum": [
        "agenda.reminder.scheduled",
        "agenda.reminder.sent",
        "agenda.reminder.failed",
        "agenda.reminder.canceled"
      ]
    },
    "payload": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "reminder_id": { "type": "string", "format": "uuid" },
        "appointment_id": { "type": "string", "format": "uuid" },
        "target_channel": { "type": "string", "enum": ["whatsapp", "ui-chat"] },
        "schedule_at": { "type": "string", "format": "date-time" },
        "status": {
          "type": "string",
          "enum": ["scheduled", "dispatch_requested", "sent", "failed", "canceled"]
        },
        "dispatch_command_id": { "type": ["string", "null"], "format": "uuid" },
        "error_code": { "type": "string" }
      },
      "required": ["reminder_id", "appointment_id", "target_channel", "status"]
    }
  },
  "required": ["name", "payload"]
}
