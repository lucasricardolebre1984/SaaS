{
  "name": "fabio",
  "version": "0.1.0",
  "private": true,
  "description": "Automania AI institutional SaaS base",
  "scripts": {
    "nx": "nx",
    "serve:saas": "npx nx run app-platform-api:serve",
    "serve:split": "npx nx run-many --target=serve --projects=app-platform-api,app-owner-console,app-crm-console --parallel=3",
    "serve:all": "npx nx run-many --target=serve --projects=app-platform-api,app-owner-console,app-crm-console --parallel=3",
    "contracts:check": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/run-contract-checks.ps1",
    "tenant:validate": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/validate-sample-tenant-pack.ps1",
    "smoke:postgres": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/smoke-postgres-orchestration.ps1",
    "preprod:validate": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/preprod-validate.ps1",
    "release:dry-run": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/release-dry-run.ps1",
    "rollback:drill": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/rollback-drill.ps1",
    "deploy:aws:readiness": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/deploy-aws-readiness.ps1",
    "generate:saas-starter": "node ./tools/generate-saas-starter.mjs",
    "skills:install": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/install-project-skills.ps1 -Agent codex -Force",
    "init:day": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/start-day.ps1 -Agent codex -ForceSkills",
    "resume:day": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/start-day.ps1 -Agent codex -SkipInstall",
    "start:day": "npm run init:day",
    "end:day": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/end-day.ps1 -ShowPending",
    "github:protect-main": "pwsh -NoProfile -ExecutionPolicy Bypass -File ./tools/enforce-branch-protection.ps1 -Apply -Branch main"
  },
  "dependencies": {
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "nx": "22.5.2"
  }
}
