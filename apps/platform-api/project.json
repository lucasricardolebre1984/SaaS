{
  "name": "app-platform-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/platform-api/src",
  "projectType": "application",
  "tags": ["scope:app", "domain:api"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo platform-api build placeholder (runtime script-based)"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node apps/platform-api/src/server.mjs"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node --test --test-concurrency=1 apps/platform-api/src/*.test.mjs"
      }
    }
  }
}
